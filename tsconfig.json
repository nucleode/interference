{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "./src",
    "pretty": true,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "declaration": true
  },
  "formatCodeOptions": {
    "identSize": 2,
    "tabSize": 2
  },
  "exclude": ["node_modules", "__tests__"],
  "include": ["**/*.ts"]
}
